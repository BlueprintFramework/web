{
  "format_on_save": ["prettier"],
  "tab_size": 2,
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "vue": "html",
          "*.vue": "html"
        },
        "experimental": {
          "classRegex": [
            ["@apply\\s+([^;]*);", "([a-zA-Z0-9\\s\\-:]+)"],
            "class=\"([^\"]*)",
            "class={\"([^\"}]*)",
            "class=format!({\"([^\"}]*)"
          ]
        }
      }
    }
  }
}
